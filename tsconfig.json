{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"noImplicitAny": false,
		"paths": {
			"@/*": ["./src/*"]
		},
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/components/Spinner.js"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
